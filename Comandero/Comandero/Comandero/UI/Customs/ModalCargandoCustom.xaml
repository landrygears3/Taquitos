<?xml version="1.0" encoding="utf-8" ?>
<Grid  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Comandero.UI.Customs.ModalCargandoCustom"
             BackgroundColor="{DynamicResource TransparentBlackColor}"
             IsVisible="{Binding IsLoading}">
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <ActivityIndicator IsRunning="{Binding IsLoading}" Color="{DynamicResource PrimaryColor}" />
            <Label Text="Cargando..." TextColor="{DynamicResource PrimaryColor}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
</Grid>